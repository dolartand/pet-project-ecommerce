# =============================================================================
# DOCKER COMPOSE PROJECT CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=ecommerce

# =============================================================================
# SPRING BOOT CONFIGURATION
# =============================================================================
# Профиль Spring Boot (dev, docker, prod)
SPRING_PROFILES_ACTIVE=docker

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
# Имя базы данных
POSTGRES_DB=ecommerce
# Пользователь PostgreSQL
POSTGRES_USER=postgres
# Пароль для PostgreSQL (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ!)
POSTGRES_PASSWORD=your_secure_password_here
# Порт PostgreSQL (внешний)
POSTGRES_PORT=5432

# JPA/Hibernate настройки
SPRING_JPA_HIBERNATE_DDL_AUTO=none
# Показывать SQL запросы в логах
SPRING_JPA_SHOW_SQL=false

# Flyway миграции
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_BASELINE_ON_MIGRATE=true

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Порт Redis
REDIS_PORT=6379
# База данных Redis
REDIS_DATABASE=0
# Таймаут подключения к Redis
REDIS_TIMEOUT=2000ms

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
# Пользователь RabbitMQ
RABBITMQ_USER=admin
# Пароль RabbitMQ (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ!)
RABBITMQ_PASSWORD=your_rabbitmq_password_here
# Виртуальный хост RabbitMQ
RABBITMQ_VHOST=ecommerce
# Порт RabbitMQ AMQP
RABBITMQ_PORT=5672
# Порт веб-интерфейса RabbitMQ Management
RABBITMQ_MANAGEMENT_PORT=15672

# =============================================================================
# JWT TOKEN CONFIGURATION
# =============================================================================
# Секретный ключ для JWT (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ! Минимум 256 бит)
JWT_SECRET=your-secret-jwt-key-minimum-256-bits-long-please-change-this
# Время жизни access токена в миллисекундах
JWT_ACCESS_TOKEN_EXPIRATION=900000
# Время жизни refresh токена в миллисекундах
JWT_REFRESH_TOKEN_EXPIRATION=604800000
# Издатель JWT токенов
JWT_ISSUER=ecommerce-api

# =============================================================================
# APPLICATION PORTS
# =============================================================================
# Порт backend приложения
BACKEND_PORT=8080
# Порт frontend приложения
FRONTEND_PORT=3000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# URL API для фронтенда
REACT_APP_API_URL=http://localhost:8080/api
# Генерировать source maps для фронтенда
GENERATE_SOURCEMAP=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Уровни логирования:
# TRACE, DEBUG, INFO, WARN, ERROR
LOGGING_LEVEL_APP=INFO
LOGGING_LEVEL_WEB=INFO
LOGGING_LEVEL_SECURITY=INFO